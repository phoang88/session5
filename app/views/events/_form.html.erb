      <%= f.datetime_select :ends_at %>

      <%= f.label :street_address %>
      <%= f.text_field :street_address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state %>
      <%= f.text_field :state %>

      <div class="clear"></div><%= f.submit class: "btn btn-large btn-primary" %>
  <% end %>
</div>
